\captionsetup[lstlisting]
{
    format=listing,
    labelfont=white,
    textfont=white, 
    singlelinecheck=false, 
    margin=0pt, 
    font={bf,footnotesize}
}

\newcommand{\zcodemat}[2]
{
    \begin{itemize}
	\item[]\lstinputlisting[caption=#2,label=#1,style=Style2, language=matlab]{#1}
    \end{itemize}
}

\newcommand{\zcodec}[2]
{
    \begin{itemize}
	\item[]\lstinputlisting[caption=#2,label=#1,style=Style2, language=c]{#1}
    \end{itemize}
}
